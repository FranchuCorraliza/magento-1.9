<layout>
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink">
                <name>my_module_section</name>
                <path>elite_customerpage/index/index</path>
                <label>vip program</label>
            </action>
        </reference>
    </customer_account>

    <elite_customerpage_index_index>
        <update handle="customer_account" />
        <reference name="my.account.wrapper">
            <block type="core/template" name="mymodule_customerpage_content" template="elite/customer/elite_customerpage.phtml"/>            
        </reference>
        <reference name="head">
            <action method="setForcedTitle"><title>Vip Program</title></action>
        </reference>
    </elite_customerpage_index_index>

</layout>