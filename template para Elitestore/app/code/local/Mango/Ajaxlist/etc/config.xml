<config>
    <modules>
        <Mango_Ajaxlist>
            <version>1.8.3</version>
        </Mango_Ajaxlist>
    </modules>
    <frontend>
        <layout>
            <updates>
                <ajaxlist>
                    <file>ajaxlist.xml</file>
                </ajaxlist>
            </updates>
        </layout>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <mango_ajaxlist_observer>
                        <type>singleton</type>
                        <class>ajaxlist/observer</class>
                        <method>addLayoutHandler</method>
                    </mango_ajaxlist_observer>
                </observers>
            </controller_action_layout_load_before>
            <!-- disable configurable swatches observer -->
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <configurableswatches>
                        <type>disabled</type>
                    </configurableswatches>
                </observers>
            </controller_action_layout_generate_blocks_after>
        </events>
        <routers>
            <customer>
                <args>
                    <modules>
                        <mango_ajaxlist before="Mage_Catalog_Product_CompareController">
                            Mango_Ajaxlist_Product_Compare
                        </mango_ajaxlist>
                    </modules>
                </args>
            </customer>
        </routers>
    </frontend>
    <global>
        <!--blocks>
            <catalog>
                <rewrite>
                    <layer_filter_price>Mango_Ajaxlist_Block_Layer_Filter_Price</layer_filter_price>
                </rewrite>
            </catalog>
        </blocks-->
        <models>
            <ajaxlist>
                <class>Mango_Ajaxlist_Model</class>
            </ajaxlist>
            <catalog>
                <rewrite>
					<layer>Mango_Ajaxlist_Model_Layer</layer>
					<layer_filter_price>Mango_Ajaxlist_Model_Layer_Filter_Price</layer_filter_price>
                    <layer_filter_item>Mango_Ajaxlist_Model_Layer_Filter_Item</layer_filter_item>
                    <layer_filter_category>Mango_Ajaxlist_Model_Layer_Filter_Category</layer_filter_category>
                    <layer_filter_attribute>Mango_Ajaxlist_Model_Layer_Filter_Attribute</layer_filter_attribute>
                    <layer_filter_decimal>Mango_Ajaxlist_Model_Layer_Filter_Decimal</layer_filter_decimal>
                </rewrite>
            </catalog>
            <catalogsearch>
                <rewrite>
                    <layer_filter_attribute>Mango_Ajaxlist_Model_Catalogsearch_Layer_Filter_Attribute</layer_filter_attribute>
                </rewrite>
            </catalogsearch>
            <catalog_resource_eav_mysql4>
                <rewrite>
                    <layer_filter_price>Mango_Ajaxlist_Model_Resource_Eav_Mysql4_Layer_Filter_Price</layer_filter_price>
                    <layer_filter_attribute>Mango_Ajaxlist_Model_Resource_Eav_Mysql4_Layer_Filter_Attribute</layer_filter_attribute>
                    <layer_filter_decimal>Mango_Ajaxlist_Model_Resource_Eav_Mysql4_Layer_Filter_Decimal</layer_filter_decimal>
                </rewrite>
            </catalog_resource_eav_mysql4>
        </models>
		<blocks>
			<ajaxlist>
                <class>Mango_Ajaxlist_Block</class>
            </ajaxlist>
			<catalog>
				<rewrite>
					<layer_view>Mango_Ajaxlist_Block_Layer_View</layer_view>
					<layer_filter_attribute>Mango_Ajaxlist_Block_Layer_Filter_Attribute</layer_filter_attribute>
					<layer_filter_category>Mango_Ajaxlist_Block_Layer_Filter_Category</layer_filter_category>
				</rewrite>
			</catalog>
		</blocks>
		<helpers>
            <ajaxlist>
                <class>Mango_Ajaxlist_Helper</class>
            </ajaxlist>
        </helpers>
        <events>
            <http_response_send_before>
                <observers>
                    <mango_ajaxlist_observer>
                        <type>singleton</type>
                        <class>ajaxlist/observer</class>
                        <method>http_response_send_before</method>
                    </mango_ajaxlist_observer>
                </observers>
            </http_response_send_before>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <ajaxlist_prepare_layout_after>
                        <type>singleton</type>
                        <class>ajaxlist/observer</class>
                        <method>core_block_abstract_prepare_layout_after</method>
                    </ajaxlist_prepare_layout_after>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <core_block_abstract_to_html_after>
                <observers>
                    <ajaxlist_to_html_after>
                        <type>singleton</type>
                        <class>ajaxlist/observer</class>
                        <method>core_block_abstract_to_html_after</method>
                    </ajaxlist_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
            <controller_response_redirect>
                <observers>
                    <ajaxlist_compare_response_redirect>
                        <type>singleton</type>
                        <class>ajaxlist/observer</class>
                        <method>controller_response_redirect</method>
                    </ajaxlist_compare_response_redirect>
                </observers>
            </controller_response_redirect>

        </events>
    </global>
    <default>
        <ajaxlist>
            <ajaxlist>
                <step>1</step>
            </ajaxlist>
            <frontend>
                <list_max_height>150</list_max_height>
            </frontend>
        </ajaxlist>
    </default>
    
</config>	
